@model RegisterModel
@{
    ViewData["Title"] = "ثبت نام در سایت";
}

<div class="site-section bg-light" id="contact-section">
    <div class="container">
        <div class="row mb-5">
            <div class="col-12 text-center">
                <h2 class="section-title mb-3">ثبت نام در سایت</h2>
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col-md-7 mb-5">


                <form asp-action="Register" asp-controller="Auth" method="post" class="p-5 bg-white">

                    <h2 class="h4 text-black mb-5">فرم ثبت نام</h2>
                    <div asp-validation-summary="All"></div>

                    <div class="row form-group">

                        <div class="col-md-12">
                            <label class="text-black" asp-for="Mobile"></label>
                            <input type="text" asp-for="Mobile" class="form-control rounded-0">
                            <span class="text-danger" asp-validation-for="Mobile"></span>
                        </div>
                    </div>

                    <div class="row form-group">

                        <div class="col-md-12">
                            <label class="text-black" asp-for="Pass"></label>
                            <input type="text" asp-for="Pass" class="form-control rounded-0">
                            <span class="text-danger" asp-validation-for="Pass"></span>
                        </div>
                    </div>


                    <div class="row form-group">
                        <div class="col-md-12">
                            <input type="submit" value="ارسال" class="btn btn-black rounded-0 py-3 px-4">
                        </div>
                    </div>


                </form>
            </div>

        </div>

    </div>
</div>